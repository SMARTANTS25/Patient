<?xml version="1.0" encoding="utf-8"?>
<!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            >
        <ImageView
            android:id="@+id/MyReport_Docimg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/patiet2" />

            <TextView
                android:id="@+id/textViewEditImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text=" Edit " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            >

        <TextView
            android:id="@+id/ViewPatientProfile_PatientNameTV"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
         />
            <Button
                android:id="@+id/ViewPatientProfile_editPersonalInfoButton"
                android:layout_width="209dp"
                android:layout_height="27dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:background="@color/Buttons"
                android:fontFamily="monospace"
                android:text="@string/PatientProfile_EditProfile"
                android:textColor="@color/md_white_1000"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/email_2"
        />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="monospace"
        android:text="Email:"
        android:textSize="14sp"
        android:layout_weight="0.12"         />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">

        <TextView
            android:id="@+id/ViewPatientProfile_emailVT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="Example@gmail.com"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/gendersss"
         />

        <TextView
            android:id="@+id/diabetes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="Gender:"
            android:layout_weight="0.2"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">

        <TextView
            android:id="@+id/ViewPatientProfile_GenderVT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="Gender"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/bday"
            />

        <TextView
            android:id="@+id/asthma"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="Birthdate:"
            android:layout_weight="0.28"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">

        <TextView
            android:id="@+id/ViewPatientProfile_BirthDateVT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="15/11/1992"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/telephone" />

        <TextView
            android:id="@+id/Allergies"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="Phone Number:"
            android:layout_weight="0.2"
            android:textSize="14sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">

        <TextView
            android:id="@+id/ViewPatientProfile_phoneVT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="67700009"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"

        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/telephone" />

        <TextView
            android:id="@+id/medication"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="Emergency phone number:"
            android:textSize="14sp"
            android:layout_weight="0.2"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:id="@+id/ViewPatientProfile_emergencyNumberTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="67733009"
            android:textSize="14sp" />
    </LinearLayout>
    <Button
        android:id="@+id/ViewPatientProfile_medicalInfoViewButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="monospace"
        android:textSize="14dp"
        android:textColor="@color/md_white_1000"
        android:background="@color/Buttons"
        android:text="@string/PatientProfile_MedicalInfo"
      />

</LinearLayout>