<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.Login">

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="200dp"
        android:layout_height="150dp"

        android:layout_above="@+id/loginEmailText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        app:srcCompat="@mipmap/mainlogo" />

    <EditText
        android:id="@+id/loginEmailText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="example@example.com"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/passwordLoginText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />


    <EditText
        android:id="@+id/passwordLoginText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginEmailText"
        android:layout_alignStart="@+id/loginEmailText"
        android:layout_centerVertical="true"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="******"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Buttons"
        android:fontFamily="monospace"
        android:textColor="@color/md_white_1000"
        android:text="@string/login_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/signupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signUp_TextView"
        android:textColor="@color/Buttons"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/passwordLoginText"
        android:layout_alignLeft="@+id/passwordLoginText"
        android:layout_alignStart="@+id/passwordLoginText" />

    <TextView
        android:id="@+id/forgetpasswordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forget_PasswordTV"
        android:textColor="@color/Buttons"
        android:textSize="18sp"
        android:layout_below="@+id/passwordLoginText"
        android:layout_alignRight="@+id/passwordLoginText"
        android:layout_alignEnd="@+id/passwordLoginText" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/email"
        android:layout_alignBottom="@+id/loginEmailText"
        android:layout_toLeftOf="@+id/loginEmailText"
        android:layout_toStartOf="@+id/loginEmailText"
        android:fontFamily="monospace"/>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView24"
        android:layout_alignStart="@+id/imageView24"
        android:layout_alignTop="@+id/passwordLoginText"
        app:srcCompat="@mipmap/password" />


</RelativeLayout>
