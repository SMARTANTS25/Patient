<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.RegistrationPage2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Buttons">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Reg2_FirstName"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Reg2_LastName"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/Reg_FirstNameTF"
        android:layout_toRightOf="@+id/imageView9"
        android:layout_toEndOf="@+id/imageView9" />

    <EditText
        android:id="@+id/Reg_LastNameTF"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/imageView4"
        android:layout_alignRight="@+id/Reg_CivilIDTF"
        android:layout_alignEnd="@+id/Reg_CivilIDTF" />

    <EditText
        android:id="@+id/Reg_FirstNameTF"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/Reg2_CivilID"
        android:layout_below="@+id/Reg_FirstNameTF"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:id="@+id/Reg_CivilIDTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_alignRight="@+id/Reg_BirthDateTF"
        android:layout_alignEnd="@+id/Reg_BirthDateTF" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/Reg_CivilIDTF"
        android:layout_marginTop="19dp"
        android:text="@string/Reg2_BirthDate" />

    <EditText
        android:id="@+id/Reg_BirthDateTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/imageView5"
        android:hint="dd/mm/yyyy"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignRight="@+id/Reg_PhoneNumberTF"
        android:layout_alignEnd="@+id/Reg_PhoneNumberTF" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="@string/Reg2_Phone"
        android:layout_below="@+id/Reg_BirthDateTF"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />

    <EditText
        android:id="@+id/Reg_PhoneNumberTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignRight="@+id/Reg_EmergencyNumberTF"
        android:layout_alignEnd="@+id/Reg_EmergencyNumberTF" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Reg2_EmergencyPhone"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toRightOf="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7" />

    <EditText
        android:id="@+id/Reg_EmergencyNumberTF"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/BtnToMedicalReg"
        android:layout_alignStart="@+id/BtnToMedicalReg" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/Reg_CivilIDTF"
        android:layout_alignLeft="@+id/Reg_FirstNameTF"
        android:layout_alignStart="@+id/Reg_FirstNameTF"
        app:srcCompat="@mipmap/id_card" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/calender"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/Reg_BirthDateTF"
        android:layout_alignStart="@+id/Reg_BirthDateTF" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/phone_icon"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/emergencynum"
        android:layout_below="@+id/Reg_PhoneNumberTF"
        android:layout_alignLeft="@+id/Reg_EmergencyNumberTF"
        android:layout_alignStart="@+id/Reg_EmergencyNumberTF"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/profile_icon"
        android:layout_below="@+id/toolbar2"
        android:layout_alignLeft="@+id/Reg_FirstNameTF"
        android:layout_alignStart="@+id/Reg_FirstNameTF" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/profile_icon"
        android:layout_above="@+id/Reg_LastNameTF"
        android:layout_alignLeft="@+id/Reg_LastNameTF"
        android:layout_alignStart="@+id/Reg_LastNameTF" />

    <Button
        android:id="@+id/BtnToMedicalReg"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:background="@color/Buttons"
        android:text="@string/Reg1_Btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />







</RelativeLayout>
