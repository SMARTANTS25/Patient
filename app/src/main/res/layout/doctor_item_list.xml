<?xml version="1.0" encoding="utf-8"?>
<!--<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/DoctorItemList_DoctorProfileImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/doctor" />

        <TextView
            android:id="@+id/DoctorItemList_DoctorNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="monospace"
            android:layout_marginLeft="15dp"
            android:text="Mohammad Aziz Mohammad"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/homeSpecialtyIcon"
            android:layout_marginLeft="90dp"
            android:layout_width="50dp"
            android:layout_height="25dp"
            app:srcCompat="@mipmap/spacialty" />

    <TextView
        android:id="@+id/DoctorItemList_DoctorSpecialtyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orthopedic"
        android:textSize="14sp"
        android:fontFamily="monospace"
       />

        <ImageView
            android:id="@+id/genderr"
            android:layout_width="50dp"
            android:layout_height="25dp"
            app:srcCompat="@mipmap/gendersss" />

    <TextView
        android:id="@+id/DoctorItemList_DoctorGenderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Male"
        android:textSize="14sp"
     />

    </LinearLayout>

</LinearLayout>