<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imageViewHospital"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
         />

    <TextView
        android:id="@+id/textViewHospitalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewHospital"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/imageViewHospital"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/textViewHospitalTitle"
        android:layout_toRightOf="@+id/textViewYear"
        android:layout_toEndOf="@+id/textViewYear"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="39dp" />

    <TextView
        android:id="@+id/textViewYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/textViewDescription"
        android:layout_alignRight="@+id/textViewHospitalTitle"
        android:layout_alignEnd="@+id/textViewHospitalTitle" />
</RelativeLayout>