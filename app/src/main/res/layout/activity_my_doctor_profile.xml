<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.MyDoctorProfile">


    <ImageView
        android:id="@+id/MyDoctorProfile_doctorImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@mipmap/doctor"
        android:layout_below="@+id/MyDoctorProfile_toolbar"
        android:layout_toLeftOf="@+id/MyDoctorProfile_DoctorSpecialtyTitle"
        android:layout_toStartOf="@+id/MyDoctorProfile_DoctorSpecialtyTitle" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/MyDoctorProfile_toolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Buttons">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/MyDoctorProfile_DoctorNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView_DocName"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:layout_alignTop="@+id/MyDoctorProfile_doctorImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/MyDoctorProfile_doctorNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MyDoctorProfile_DoctorNameTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/MyDoctorProfile_DoctorSpecialtyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/textView_DocSpeciality"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/MyDoctorProfile_doctorImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/MyDoctorProfile_doctorSpecialtyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/imageView49"
        android:layout_alignLeft="@+id/MyDoctorProfile_DoctorNameTitle"
        android:layout_alignStart="@+id/MyDoctorProfile_DoctorNameTitle" />

    <TextView
        android:id="@+id/MyDoctorProfile_emailTITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textView_DocEmail"
        android:layout_marginTop="19dp"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/MyDoctorProfile_doctorSpecialtyTV"
        android:layout_alignLeft="@+id/MyDoctorProfile_DoctorSpecialtyTitle"
        android:layout_alignStart="@+id/MyDoctorProfile_DoctorSpecialtyTitle" />

    <TextView
        android:id="@+id/MyDoctorProfile_doctorEmailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/imageView50"
        android:layout_alignLeft="@+id/MyDoctorProfile_doctorSpecialtyTV"
        android:layout_alignStart="@+id/MyDoctorProfile_doctorSpecialtyTV" />

    <TextView
        android:id="@+id/MyDoctorProfile_NationalityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/textView_DocNationality"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/MyDoctorProfile_doctorEmailTV"
        android:layout_alignLeft="@+id/MyDoctorProfile_emailTITLE"
        android:layout_alignStart="@+id/MyDoctorProfile_emailTITLE" />

    <TextView
        android:id="@+id/MyDoctorProfile_NationalityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="14sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/MyDoctorProfile_NationalityTitle"
        android:layout_alignLeft="@+id/MyDoctorProfile_doctorEmailTV"
        android:layout_alignStart="@+id/MyDoctorProfile_doctorEmailTV" />

    <TextView
        android:id="@+id/MyDoctorProfile_CvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/textView_DocCV"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/MyDoctorProfile_NationalityTV"
        android:layout_alignLeft="@+id/MyDoctorProfile_NationalityTitle"
        android:layout_alignStart="@+id/MyDoctorProfile_NationalityTitle" />

    <TextView
        android:id="@+id/MyDoctorProfile_doctorCvTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MyDoctorProfile_NationalityTV"
        android:layout_alignStart="@+id/MyDoctorProfile_NationalityTV"
        android:layout_below="@+id/MyDoctorProfile_CvTitle"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView49"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/stethoscope"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/MyDoctorProfile_DoctorSpecialtyTitle"
        android:layout_toLeftOf="@+id/MyDoctorProfile_DoctorSpecialtyTitle"
        android:layout_toStartOf="@+id/MyDoctorProfile_DoctorSpecialtyTitle" />

    <ImageView
        android:id="@+id/imageView50"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/email"
        android:layout_alignTop="@+id/MyDoctorProfile_emailTITLE"
        android:layout_alignLeft="@+id/imageView49"
        android:layout_alignStart="@+id/imageView49" />

    <ImageView
        android:id="@+id/imageView52"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/big_flag_icon"
        android:layout_alignBottom="@+id/MyDoctorProfile_NationalityTitle"
        android:layout_alignLeft="@+id/imageView50"
        android:layout_alignStart="@+id/imageView50" />

    <ImageView
        android:id="@+id/imageView53"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/medical_report_icon"
        android:layout_alignBottom="@+id/MyDoctorProfile_CvTitle"
        android:layout_alignLeft="@+id/imageView52"
        android:layout_alignStart="@+id/imageView52" />

    <Button
        android:id="@+id/myDrProfile_sendReportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/Buttons"
        android:fontFamily="monospace"
        android:text="@string/buttonSend_DoctorRequest"
        android:textColor="@color/md_white_1000"
        android:textSize="14sp" />

</RelativeLayout>
