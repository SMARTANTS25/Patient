<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.EditMedicalInfo">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignLeft="@+id/saveChangesMedicalButton"
        android:layout_alignStart="@+id/saveChangesMedicalButton" />

    <Button
        android:id="@+id/saveChangesMedicalButton"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView20"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="17dp"
        android:text="Save Changes" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Type"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:layout_below="@+id/saveChangesMedicalButton"
        android:layout_toLeftOf="@+id/saveChangesMedicalButton"
        android:layout_toStartOf="@+id/saveChangesMedicalButton" />

    <EditText
        android:id="@+id/bloodtypeEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_below="@+id/textView21"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="A+" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diabetes"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/bloodtypeEditText"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />

    <EditText
        android:id="@+id/diabetesEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/bloodtypeEditText"
        android:layout_alignStart="@+id/bloodtypeEditText"
        android:layout_below="@+id/textView22"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="No" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Asthma"
        android:layout_below="@+id/diabetesEditText"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <EditText
        android:id="@+id/asthmaEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="No"
        android:layout_below="@+id/textView23"
        android:layout_alignLeft="@+id/diabetesEditText"
        android:layout_alignStart="@+id/diabetesEditText" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Allergies"
        android:layout_below="@+id/asthmaEditText"
        android:layout_alignRight="@+id/textView22"
        android:layout_alignEnd="@+id/textView22" />

    <EditText
        android:id="@+id/allergiesEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/asthmaEditText"
        android:layout_alignStart="@+id/asthmaEditText"
        android:layout_below="@+id/textView24"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="No" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Medications"
        android:layout_below="@+id/allergiesEditText"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23" />

    <EditText
        android:id="@+id/medicationsEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/allergiesEditText"
        android:layout_alignStart="@+id/allergiesEditText"
        android:layout_below="@+id/textView25"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="No Medication" />

    <Button
        android:id="@+id/editGeneralInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_toRightOf="@+id/imageView5"
        android:text="Edit General Information" />
</RelativeLayout>
