<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/MyReport_Docimg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@mipmap/doctor" />

        <TextView
            android:id="@+id/MyRerports_DocName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:fontFamily="monospace"
            android:text="Mohammad Aziz Mohammad"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/DoctorItemList_DoctorSpecialtyTV"
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/SendReport_Headache"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/DoctorItemList_DoctorGenderTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:fontFamily="monospace"
            android:text="@string/SendReport_HeartBeat"
            android:textSize="14sp"
            android:layout_weight="0.5"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/MyReports_HeadacheTV"
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="HeadacheR"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_weight="0.5"

            />
        <TextView
            android:id="@+id/MyReport_HeartTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:fontFamily="monospace"
            android:text="Heartbeat RateR"
            android:textSize="14sp"
            android:layout_weight="0.5"
            />

    </LinearLayout>

</LinearLayout>