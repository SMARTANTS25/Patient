<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.SendReport">

    <TextView
        android:id="@+id/SendReport_ReportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Report:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="monospace"
        android:textSize="18dp"
        android:layout_below="@+id/SendReport_DoctorImage"
        android:layout_alignLeft="@+id/SendReport_ReportDetails"
        android:layout_alignStart="@+id/SendReport_ReportDetails" />

    <ImageView
        android:id="@+id/SendReport_DoctorImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/SendReport_ReportDetails"

        android:layout_alignStart="@+id/SendReport_ReportDetails"
        android:layout_marginTop="79dp"

        app:srcCompat="@mipmap/doctor_profile" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar9"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Buttons">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/SendReport_DoctorNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:fontFamily="monospace"
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignTop="@+id/SendReport_DoctorImage"
        android:layout_toRightOf="@+id/SendReport_DoctorImage"
        android:layout_toEndOf="@+id/SendReport_DoctorImage"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/SendReport_DoctorNameTV"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SendReport_DoctorNameTitle"
        android:layout_alignStart="@+id/SendReport_DoctorNameTitle"
        android:layout_below="@+id/SendReport_DoctorNameTitle"
        android:layout_marginTop="21dp"
        android:fontFamily="monospace"
        android:text="TextView"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/SendReport_ReportDetails"
        android:layout_width="315dp"
        android:layout_height="200dp"

        android:ems="10"
        android:fontFamily="monospace"
        android:inputType="textMultiLine"
        android:textSize="18dp"
        android:layout_below="@+id/SendReport_ReportTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/SendReport_Button"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
android:textColor="@color/md_white_1000"
        android:background="@color/Buttons"
        android:fontFamily="monospace"
        android:text="Send Report"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/SendReport_Button"
        android:layout_toStartOf="@+id/SendReport_Button"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_alignBottom="@+id/SendReport_Button" />


</RelativeLayout>
