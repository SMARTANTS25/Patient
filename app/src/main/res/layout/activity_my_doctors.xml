<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pifss.patient.MyDoctors">

        <android.support.v7.widget.Toolbar
            android:id="@+id/AllDoctorToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Toolbar"
            android:background="@color/Buttons">

        </android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/MyDoctorList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/AllDoctorToolbar" />

    <SearchView
        android:id="@+id/MyDoctorSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AllDoctorList"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/Buttons"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/sendReportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"

        app:backgroundTint="@color/Buttons" />

    </RelativeLayout>
