<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.ResetPassword">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/ResetPassword_emailTF"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ResetPassword_emailTF"
        android:layout_toLeftOf="@+id/ResetPassword_emailTF"
        android:layout_toStartOf="@+id/ResetPassword_emailTF"
        app:srcCompat="@mipmap/email_2" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/myToolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Buttons">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:background="@color/material_drawer_background"
        app:srcCompat="@mipmap/heartlogo"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/myToolbar"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/idd_card"
        android:layout_alignTop="@+id/ResetPassword_CivilIdTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ResetPassword_emailTF"
        android:layout_toStartOf="@+id/ResetPassword_emailTF"
        android:layout_alignBottom="@+id/ResetPassword_CivilIdTV" />

    <EditText
        android:id="@+id/ResetPassword_emailTF"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="example@example.com"
        android:inputType="textEmailAddress"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/imageView42"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp" />

    <Button
        android:id="@+id/ResetPassword_Button"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/Buttons"
        android:fontFamily="monospace"
        android:text="@string/Forgetpassword_Submit"
        android:textColor="@color/md_white_1000"
        android:textSize="14dp" />


    <EditText
        android:id="@+id/ResetPassword_CivilIdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/ResetPassword_emailTF"
        android:layout_marginTop="22dp"
        android:layout_alignRight="@+id/ResetPassword_emailTF"
        android:layout_alignEnd="@+id/ResetPassword_emailTF"
        android:layout_toRightOf="@+id/imageView18"
        android:layout_toEndOf="@+id/imageView18" />

</RelativeLayout>
