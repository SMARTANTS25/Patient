<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.ViewMedicalInfo">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:id="@+id/button"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginEnd="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginTop="30dp"
        android:text="Edit Profile" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="BloodType"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_below="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button" />

    <TextView
        android:id="@+id/bloodtypeViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A+"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:id="@+id/diabeteViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bloodtypeViewText"
        android:layout_alignStart="@+id/bloodtypeViewText"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="13dp"
        android:text="No" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diabetes"
        android:layout_below="@+id/bloodtypeViewText"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textViewHospitalAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Asthma"
        android:layout_below="@+id/diabeteViewText"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:id="@+id/asthmaViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="No"
        android:layout_below="@+id/textViewHospitalAddress"
        android:layout_alignLeft="@+id/diabeteViewText"
        android:layout_alignStart="@+id/diabeteViewText" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allergies"
        android:layout_below="@+id/asthmaViewText"
        android:layout_alignLeft="@+id/textViewHospitalAddress"
        android:layout_alignStart="@+id/textViewHospitalAddress"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/allergiesViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/asthmaViewText"
        android:layout_alignStart="@+id/asthmaViewText"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="14dp"
        android:text="No" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/allergiesViewText"
        android:layout_marginTop="13dp"
        android:text="Medications"
        android:id="@+id/textView18" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/allergiesViewText"
        android:layout_alignStart="@+id/allergiesViewText"
        android:layout_below="@+id/textView16"
        android:layout_marginTop="20dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/medicationViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="No Medication"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/allergiesViewText"
        android:layout_alignStart="@+id/allergiesViewText" />

    <Button
        android:id="@+id/mydrMedicalInfoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Doctors"
        android:layout_above="@+id/generalinfoViewButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/generalinfoViewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General Information"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
