<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pifss.patient.ViewMedicalInfo"
    android:weightSum="1">


    <android.support.v7.widget.Toolbar
        android:id="@+id/myToolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Buttons">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/MyReport_Docimg"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@mipmap/patiet2" />

        <Button
            android:id="@+id/ViewMedicalInfo_EditProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:background="@color/Buttons"
            android:fontFamily="monospace"
            android:text="@string/PatientProfile_EditProfile"
            android:textColor="@color/md_white_1000"
            android:textSize="14sp"
            android:layout_weight="0.7" />
    </LinearLayout>


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/blooddrop"
            />

        <TextView
            android:id="@+id/BloodType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="@string/Reg3_BloodType"
            android:textSize="14sp"
            android:layout_weight="0.12"         />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">

        <TextView
            android:id="@+id/ViewMedicalInfo_bloodTypeTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="BType"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/finger"
            />

        <TextView
            android:id="@+id/diabetes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="@string/Reg3_Diabetes"
            android:layout_weight="0.2"
            android:textSize="14sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">
        <TextView
            android:id="@+id/ViewMedicalInfo_diabetesTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="Status"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/asthma"
            />

        <TextView
            android:id="@+id/asthma"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="@string/PatientMedicalInfo_Asthma"
            android:layout_weight="0.28"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">
        <TextView
            android:id="@+id/ViewMedicalInfo_asthmaTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="Status"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/allergies" />

        <TextView
            android:id="@+id/Allergies"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="@string/PatientMedicalInfo_Allergies"
            android:layout_weight="0.5"
            android:textSize="14sp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">
        <TextView
            android:id="@+id/ViewMedicalInfo_AllergiesTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="Status"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/medicine"
            />

        <TextView
            android:id="@+id/medication"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="monospace"
            android:text="@string/PatientMedicalInfo_Medications"
            android:textSize="14sp"
            android:layout_weight="0.2"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">
        <TextView
            android:id="@+id/ViewMedicalInfo_medicationVT"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="monospace"
            android:text="medication"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>