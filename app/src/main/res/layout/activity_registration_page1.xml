<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.RegistrationPage1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar11"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Buttons">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/Reg1Btn"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:text="@string/Reg1_Btn"
        android:fontFamily="monospace"
        android:textSize="14sp"
        android:textColor="@color/md_white_1000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/Reg_EmailTF"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="Example@example.com"
        android:inputType="textPersonName"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11" />

    <EditText
        android:id="@+id/Reg_PasswordTF"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="*******"
        android:inputType="textPassword"
        android:layout_below="@+id/Reg_EmailTF"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/Reg_ConfirmPassTF"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="*******"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Reg_PasswordTF"
        android:layout_toRightOf="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView13" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="55dp"
        app:srcCompat="@mipmap/gender_icon"
        android:layout_alignTop="@+id/radioGroup2"
        android:layout_toLeftOf="@+id/Reg_ConfirmPassTF"
        android:layout_toStartOf="@+id/Reg_ConfirmPassTF" />

    <ImageView
        android:id="@+id/ViewMedicalInfo_PatientImage"
        android:layout_width="200dp"
        android:layout_height="150dp"

        android:layout_marginTop="79dp"
        android:background="@color/material_drawer_background"
        app:srcCompat="@mipmap/heartlogo"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Reg_EmailTF"
        android:layout_alignStart="@+id/Reg_EmailTF"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/email"
        android:layout_alignBottom="@+id/Reg_EmailTF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/password"
        android:layout_alignBottom="@+id/Reg_PasswordTF"
        android:layout_toLeftOf="@+id/Reg_PasswordTF"
        android:layout_toStartOf="@+id/Reg_PasswordTF" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/password"

        android:layout_alignTop="@+id/Reg_ConfirmPassTF"
        android:layout_toLeftOf="@+id/Reg_PasswordTF"
        android:layout_toStartOf="@+id/Reg_PasswordTF" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:id="@+id/radioGroup2"
        android:layout_above="@+id/Reg1Btn"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_below="@+id/Reg_ConfirmPassTF"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="@string/MaleReg_RadioButton" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/MaleRegMaleRadioButton"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="@string/FemaleReg_RadioButton" />
    </RadioGroup>


</RelativeLayout>
