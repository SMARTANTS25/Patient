<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.RegistrationPage1">

    <Button
        android:id="@+id/Reg1Btn"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@android:color/holo_blue_light"
        android:text="@string/Reg1_Btn" />

    <EditText
        android:id="@+id/Reg_EmailTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginTop="166dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Reg1Btn"
        android:hint="Example@example.com"
        android:layout_alignEnd="@+id/Reg1Btn" />

    <EditText
        android:id="@+id/Reg_PasswordTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Reg_EmailTF"
        android:layout_alignStart="@+id/Reg_EmailTF"
        android:layout_below="@+id/Reg_EmailTF"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="*******"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/Reg_ConfirmPassTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="*******"
        android:layout_alignLeft="@+id/Reg_PasswordTF"
        android:layout_alignStart="@+id/Reg_PasswordTF"
        android:layout_below="@+id/Reg_PasswordTF"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@mipmap/gender_icon"
        android:layout_alignTop="@+id/MaleRegMaleRadioButton"
        android:layout_toLeftOf="@+id/Reg_ConfirmPassTF"
        android:layout_toStartOf="@+id/Reg_ConfirmPassTF" />

    <RadioButton
        android:id="@+id/MaleRegMaleRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MaleReg_RadioButton"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_below="@+id/Reg_ConfirmPassTF"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="19dp" />

    <RadioButton
        android:id="@+id/RegFemaleRadioBu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FemaleReg_RadioButton"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/MaleRegMaleRadioButton"
        android:layout_alignStart="@+id/MaleRegMaleRadioButton" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="150dp"

        android:layout_above="@+id/imageView11"
        android:layout_alignLeft="@+id/Reg_EmailTF"
        android:layout_alignStart="@+id/Reg_EmailTF"
        android:background="@color/material_drawer_background"
        app:srcCompat="@mipmap/mainlogo" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/email"
        android:layout_alignTop="@+id/Reg_EmailTF"
        android:layout_alignLeft="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/Reg_PasswordTF"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/Reg_PasswordTF"
        android:layout_toStartOf="@+id/Reg_PasswordTF"
        app:srcCompat="@mipmap/password" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12"
        android:layout_alignTop="@+id/Reg_ConfirmPassTF"
        app:srcCompat="@mipmap/password" />







</RelativeLayout>
