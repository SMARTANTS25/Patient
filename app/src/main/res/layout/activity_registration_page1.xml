<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.patient.RegistrationPage1">

    <Button
        android:id="@+id/Reg1Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:background="@android:color/holo_blue_light"
        android:text="Button" />

    <EditText
        android:id="@+id/Reg_EmailTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="EXAMPLE@GMAIL.COM"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="73dp"
        android:layout_marginEnd="73dp" />

    <EditText
        android:id="@+id/Reg_PasswordTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Reg_EmailTF"
        android:layout_alignStart="@+id/Reg_EmailTF"
        android:layout_below="@+id/Reg_EmailTF"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="******" />

    <EditText
        android:id="@+id/Reg_ConfirmPassTF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Reg_PasswordTF"
        android:layout_alignStart="@+id/Reg_PasswordTF"
        android:layout_below="@+id/Reg_PasswordTF"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="******" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@mipmap/male"
        android:layout_below="@+id/Reg_ConfirmPassTF"
        android:layout_alignLeft="@+id/Reg_ConfirmPassTF"
        android:layout_alignStart="@+id/Reg_ConfirmPassTF" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/Reg_ConfirmPassTF"
        android:layout_alignRight="@+id/Reg_ConfirmPassTF"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        app:srcCompat="@mipmap/female" />

    <RadioButton
        android:id="@+id/MaleRegRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:text="Male" />

    <RadioButton
        android:id="@+id/FemaleRegRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:text="Female" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"

        app:srcCompat="@mipmap/mainlogo"
        android:layout_above="@+id/imageView11"
        android:layout_toLeftOf="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@mipmap/email"
        android:layout_above="@+id/Reg_PasswordTF"
        android:layout_toLeftOf="@+id/Reg_EmailTF"
        android:layout_toStartOf="@+id/Reg_EmailTF" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/Reg_PasswordTF"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/Reg_PasswordTF"
        android:layout_toStartOf="@+id/Reg_PasswordTF"
        app:srcCompat="@mipmap/password" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12"
        android:layout_alignTop="@+id/Reg_ConfirmPassTF"
        app:srcCompat="@mipmap/password" />







</RelativeLayout>
